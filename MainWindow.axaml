<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="Soundboard.Universal.MainWindow"
        Title="Soundboard Universal"
        Width="1200" Height="800">
  <Grid RowDefinitions="Auto,*">
    <!-- Top bar -->
    <StackPanel Orientation="Horizontal" Margin="10" Spacing="10">
      <TextBlock Text="Volume:" VerticalAlignment="Center"/>
      <Slider Name="VolumeSlider" Minimum="0" Maximum="100" Value="100" Width="180"/>
      <Button Name="BtnStopAll" Content="Stop All"/>

      <TextBlock Text="Rows:" VerticalAlignment="Center" Margin="20,0,0,0"/>
      <TextBox Name="TxtRows" Width="50" Text="4"/>
      <TextBlock Text="Cols:" VerticalAlignment="Center"/>
      <TextBox Name="TxtCols" Width="50" Text="4"/>

      <TextBlock Text="Font:" VerticalAlignment="Center"/>
      <TextBox Name="TxtFont" Width="50" Text="14"/>

      <TextBlock Text="Pad:" VerticalAlignment="Center"/>
      <TextBox Name="TxtPadding" Width="50" Text="6"/>

      <Button Name="BtnApplyGrid" Content="Apply Grid" />
      <Button Name="BtnReload" Content="Reload Config" />
    </StackPanel>

    <!-- Pad grid -->
    <ScrollViewer Grid.Row="1">
      <Grid Name="PadsHost"/>
    </ScrollViewer>
  </Grid>
</Window>
